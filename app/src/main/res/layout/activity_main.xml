<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appcontest.seoulsi_we.MainActivity">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- This LinearLayout represents the contents of the screen  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- The ActionBar displayed at the top -->
            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- The main content view where fragments are loaded -->
            <LinearLayout
                android:id="@+id/flContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"

                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/large_scale_demo_view_height"
                    android:background="#dddddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/order_by_recent"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:background="@color/slide_menu_bottom_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/order_by_join"
                        android:textAppearance="?android:attr/textAppearanceSmall"  />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/slide_menu_bottom_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/order_by_comment"
                        android:textAppearance="?android:attr/textAppearanceSmall"  />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/collect"/>


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#dddddd"
                            android:layout_marginBottom="10dp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#dddddd"
                            android:layout_marginBottom="10dp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#dddddd"
                            android:layout_marginBottom="10dp"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#dddddd"
                            android:layout_marginBottom="10dp"/>



                    </LinearLayout>

                </ScrollView>


            </LinearLayout>
        </LinearLayout>

        <!-- The navigation drawer that comes from the left -->
        <!-- Note that `android:layout_gravity` needs to be set to 'start' -->

        <include layout="@layout/navigationview" />

    </android.support.v4.widget.DrawerLayout>

</android.support.constraint.ConstraintLayout>
